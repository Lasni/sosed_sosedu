<div>posts</div>
<div class="flex flex-col gap-2">
  <% @posts.each do |post| %>
    <a class="flex flex-col" href="/posts/<%= post.id %>" data-turbo-prefetch="false">
      <div>
        <%= post.author %>
      </div>
      <div>
        <%= post.body %>
      </div>
      <div>
        <%= post.created_at.strftime("%d/%m/%y %H:%M") %>
      </div>
      <%= post.id %>
    </a>
  <% end %>
</div>