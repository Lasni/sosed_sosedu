<div class="max-w-2xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="text-lg font-medium text-gray-900">
      Post ID: <span class="text-gray-600"><%= @post.id %></span>
    </div>
    <div class="mt-2">
      Post Author: <span class="text-gray-600"><%= @post.author %></span>
    </div>
    <div class="mt-4">
      Post Body: <span class="text-gray-600"><%= @post.body %></span>
    </div>
    <div 
        data-controller="leaflet--posts-show"
        data-leaflet--posts-show-target="mapDiv"
        data-latitude="<%= @post.latitude %>"
        data-longitude="<%= @post.longitude %>"
        data-poster-username="<%= @post.author %>"
        id="mapDiv-<%= @post.id %>"
        class="w-80 h-48 rounded">
    </div>
  </div>

  <div class="mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold text-gray-900">Messages:</h2>
    <% @post.messages.each do |message| %>
      <div class="mt-4 border-t border-gray-200 pt-4">
        <strong class="block text-sm font-medium text-gray-700"><%= message.user.username %>:</strong>
        <p class="mt-1 text-gray-600"><%= message.body %></p>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= render "messages/new" %>
  </div>
</div>
