<div class="flex flex-row justify-between w-full h-full">
  <div class="flex flex-col">
    <h1 class="text-2xl">Users#show</h1>
    <p>Find me in app/views/users/show.html.erb</p>
    <p>
      <%= @user.name %>
    </p>
    <p>
      <%= @user.email %>
    </p>
    <p>
      <%= @user.password %>
    </p>
  </div>
  <div class="flex flex-col gap-4 mt-4">
    <%= link_to "Edit user", edit_user_path(@user), class: 'cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to "Back to users", users_path, class: 'cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <%= button_to "Delete user button", @user, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this user?" } }, class: 'cursor-pointer bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
